<h1>登録</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %>
      prohibited this @user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
<div class="sin_up">
  <%= f.label :名前 %>
  <%= f.text_field :name %>
</div>
<div class="sin_up">
  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>
</div>
<div class="sin_up">
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
</div>
<div class="sin_up">
  <%= f.label :同じパスワードを入力 %>
  <%= f.password_field :password_confirmation %>
</div>
<div class = "field">
  <%= f.label :image %>
  <%= image_tag(@user.image.url) if @user.image.url %>
  <%= f.file_field :image %>
  </div>
  <br>
<%= f.submit "Create my acount", class: 'botton' %>
<% end %>
